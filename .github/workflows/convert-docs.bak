name: Convert Docs

on:
  push:
    paths:
      - 'docs/whitepaper.md'
  workflow_dispatch: {}

jobs:
  build:
    runs-on: ubuntu-latest
    container: pandoc/extra:3

    steps:
      - uses: actions/checkout@v4

      - name: Install Font Dependencies
        run: |
          apk update
          apk add --no-cache font-inter
          
      - name: Install Fira Code manually
        run: |
          apk add --no-cache fontconfig curl unzip
          curl -L -o /tmp/firacode.zip https://github.com/tonsky/FiraCode/releases/download/6.2/Fira_Code_v6.2.zip
          mkdir -p /usr/share/fonts/truetype/firacode
          unzip -q /tmp/firacode.zip -d /usr/share/fonts/truetype/firacode
          fc-cache -f -v

      - name: Add header for code wrapping
        run: |
          mkdir -p pandoc
          cat > pandoc/header.tex <<'EOF'
          \usepackage{fvextra}
          \DefineVerbatimEnvironment{Highlighting}{Verbatim}{breaklines,breakanywhere,commandchars=\\\{\}}
          EOF



      - name: Convert to PDF (styled, wrapped code)
        run: |
          pandoc docs/whitepaper.md \
            -f gfm+hard_line_breaks+pipe_tables+task_lists+fenced_divs \
            --pdf-engine=xelatex \
            --template=eisvogel \
            --listings \
            --resource-path=.:docs \
            -H pandoc/code-style.tex \
            -V geometry:margin=1in \
            -V sansfont="Inter" \
            -V monofont="Fira Code" \
            -V monofontoptions="Scale=0.85" \
            -o docs/whitepaper.pdf
      - name: Convert to Word
        run: |
          pandoc docs/whitepaper.md \
            -f gfm+hard_line_breaks+pipe_tables+task_lists+fenced_divs \
            -o docs/whitepaper.docx
      - uses: actions/upload-artifact@v4
        with:
          name: whitepaper
          path: |
            docs/whitepaper.pdf
            docs/whitepaper.docx
