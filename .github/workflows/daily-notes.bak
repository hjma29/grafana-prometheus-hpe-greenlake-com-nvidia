name: Daily Notes File

on:
  schedule:
    - cron: '0 0 * * *' # Runs every day at midnight UTC
  workflow_dispatch:

jobs:
  daily-notes:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Set up date variable
        id: date
        run: echo "date=$(date -u +'%Y-%m-%d')" >> $GITHUB_OUTPUT
      - name: Create daily notes file
        run: |
          NOTES_FILE="notes/${{ steps.date.outputs.date }}-notes.md"
          if [ ! -f "$NOTES_FILE" ]; then
            echo "# Daily Notes for ${{ steps.date.outputs.date }}" > "$NOTES_FILE"
          fi
      - name: Commit and push new notes file
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"
          git add notes/*.md
          git commit -m "Create daily notes file for ${{ steps.date.outputs.date }}" || echo "No changes to commit"
          git push
      - name: Delete empty notes files
        run: |
          find notes/ -type f -name "*-notes.md" -exec sh -c 'if [ ! -s "$1" ]; then rm "$1"; fi' _ {} \;
      - name: Commit and push deleted notes files
        run: |
          git add notes/*.md
          git add -u notes/
          git commit -m "Delete empty daily notes files" || echo "No changes to commit"
          git push
